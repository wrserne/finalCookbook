<body>
 
    <div class="search-box">
        <form action="/search" method="GET">
            <input type="text" name="query" placeholder="Search recipes...">
            <button type="submit">Search</button>
        </form>
    </div>
    <div class="blue-bar">
        <% categories.forEach(function(category) { %>
            <a href="/category/<%= category.replace(/\s+/g, '-').toLowerCase() %>"><%= category %></a>
        <% }); %>
    </div>

    <video id="video-background" autoplay muted loop>
        <source src="/coverr-chef-preparing-a-dish-at-a-restaurant-6248-1080p.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="title-background">
        <h1 class="title">The Donina Family Cookbook</h1>
    </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="login-box">
        <div class="photo-bar">
            <img src="images/georgemary.jpg" alt="georgemary" class="login-photo">
            <img src="images/chuckrose.jpg" alt="chuckrose" class="login-photo">
            <img src="images/leemarge.jpg" alt="leemarge" class="login-photo">
            <% if (authenticated) { %>
                <p><span style="color: black;">Welcome, <%= firstName %> <%= lastName %>!</span> <a href="/logout">Logout</a></p>

                <!-- Wrap the "Add Recipe" and "My Recipes" buttons in a div -->
                
                </div>
            <% } else { %>
                <!-- Wrap the login form in a <form> element -->
                <form action="/login" method="POST" class="login-form">
                    <div class="form-group">
                        <label for="email" style="color: black;">Email:</label>
                        <input type="text" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password" style="color: black;">Password:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <button type="submit" class="login-button">Login</button>
                </form>
                <p><span style="color: black;">Not registered yet?</span> <a href="/register">Register</a></p>


            <% } %>
            <img src="images/william.jpg" alt="william" class="login-photo">
            <img src="images/lucytony.jpg" alt="lucytony" class="login-photo">
            <img src="images/joe.jpg" alt="joe" class="login-photo">
        </div>
    </div>
    
    
    
    
    <% if (authenticated) { %>
        <div class="action-button">
            <a href="/addRecipe">Add a New Recipe</a>
        </div>
        <% if (showMyRecipesLink) { %>
            <div class="action-button">
                <a href="/myRecipes">My Recipes</a>
            </div>
        <% } %>
    <% } %>

    <div class="categories-carousel-container">
        <% categories.forEach(function(category) { %>
            <% if (categorizedRecipes[category] && categorizedRecipes[category].length > 0) { %>
                <div class="carousel-container" id="<%= category.replace(/\s+/g, '-').toLowerCase() %>">
                    <a class="category-button" href="/category/<%= category.replace(/\s+/g, '-').toLowerCase() %>">
                        <h2 class="category-heading"><%= category %></h2>
                    </a>
                    <div class="carousel <%= category.replace(/\s+/g, '-').toLowerCase() %>">
                        <% categorizedRecipes[category].forEach(function(recipe, index) { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <a href="/recipe/<%= recipe.id %>">
                                    <img src="<%= recipe.image_url || '/images/default-photo.jpg' %>" alt="<%= recipe.title %>">
                                    <div class="recipe-title"><%= recipe.title %></div>
                                </a>
                            </div>
                        <% }); %>
                    </div>
                    <button class="carousel-button" onclick="scrollCarousel(this, '<%= category.replace(/\s+/g, '-').toLowerCase() %>', -1)">Previous</button>
                    <button class="carousel-button" onclick="scrollCarousel(this, '<%= category.replace(/\s+/g, '-').toLowerCase() %>', 1)">Next</button>
                </div>
                <script>
                    function autoCycleRecipes(carouselId) {
                        var carousel = document.querySelector(`#${carouselId} .carousel`);
                        var items = carousel.querySelectorAll('.carousel-item');

                        function nextSlide() {
                            var activeIndex = -1;

                            items.forEach((item, index) => {
                                if (item.classList.contains('active')) {
                                    activeIndex = index;
                                    item.classList.remove('active');
                                }
                            });

                            var newIndex = activeIndex + 1;
                            if (newIndex >= items.length) {
                                newIndex = 0;
                            }
                            items[newIndex].classList.add('active');
                        }

                        setInterval(nextSlide, 5000); // Rotate every 5 seconds
                    }

                    autoCycleRecipes('<%= category.replace(/\s+/g, '-').toLowerCase() %>');
                </script>
            <% } else { %>
                <a class="category-button" href="/category/<%= category.replace(/\s+/g, '-').toLowerCase() %>">
                    <h2 class="category-heading"><%= category %></h2>
                </a>
                <p>No recipes available for this category.</p>
            <% } %>
        <% }); %>
    </div>
    
    <script>
        function scrollCarousel(button, carouselId, direction) {
            var carousel = document.querySelector(`#${carouselId} .carousel`);
            var items = carousel.querySelectorAll('.carousel-item');
            var activeIndex = -1;

            items.forEach((item, index) => {
                if (item.classList.contains('active')) {
                    activeIndex = index;
                    item.classList.remove('active');
                }
            });

            if (activeIndex !== -1) {
                var newIndex = activeIndex + direction;
                if (newIndex < 0) {
                    newIndex = items.length - 1;
                } else if (newIndex >= items.length) {
                    newIndex = 0;
                }
                items[newIndex].classList.add('active');
            }
        }
    </script>
</body>
