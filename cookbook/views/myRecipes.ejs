<!DOCTYPE html>
<html>
<head>
    <title>My Recipes</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* ... Your existing CSS styles ... */

        /* Additional styles for the video background */
        .video-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Place the video behind other content */
            overflow: hidden;
        }

        .video-background video {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        /* Styles for the box around the text */
        .text-box {
            background-color: rgb(255, 255, 255); /* Semi-transparent black background */
            padding: 20px;
            border-radius: 8px;
            margin: 50px auto; /* Center the box horizontally and adjust the margin as needed */
            color: black; /* Text color */
            max-width: 60%; /* Limit the width of the box */
        }

        /* Remove the bullet point from the list items */
        .text-box ul {
            list-style: none;
            padding-left: 0;
        }

        .text-box li {
            margin-bottom: 10px;
        }

        /* Yellow color for the "Edit" links */
        .edit-link {
            color: blue;
            font-size: 12px; /* Smaller text size for the "Edit" links */
        }

        /* Bold style for the recipe links */
        .recipe-link {
            font-weight: bold;
        }

        /* Additional styles for the family photos in the top bar */
        .top-bar {
    background-image: url('/cookbook/public/images/images%20%231%20page%207%20George%20and%20Mary%20photo.jpg')
                     url('/cookbook/public/images/images%20%232%20pg.%2015%20Rose%20and%20Chuck.jpg')
                     url('/cookbook/public/images/images%20%233%20pg.%2023%20Lucy%20Tony%20Donina%20%28300dpi%29.jpg')
                     url('/cookbook/public/images/images%20%234%20Nelli%20Robert.JPG')
                     url('/cookbook/public/images/images%20%235%20William%20.jpg')
                     url('/cookbook/public/images/images%20%236%20Joe.jpg')
                     url('/cookbook/public/images/images%20%237%20Adolph%20and%20Mary%20Ann.jpg')
                     url('/cookbook/public/images/images%20%238%20Lee%20and%20Marge.jpg');
    background-repeat: repeat;
    background-size: contain;
    background-position: center center;
    padding: 20px 0;
    text-align: center;
    z-index: 1000;
}
    </style>
</head>
<body>
    <div class="video-background">
        <video autoplay muted loop>
            <source src="/coverr-chef-preparing-a-dish-at-a-restaurant-6248-1080p.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <div class="top-bar">
        <h1 class="title">The Donina Family Cookbook</h1>
    </div>

    <div class="text-box">
        <h1>My Recipes</h1>
        <ul>
            <% recipes.forEach(recipe => { %>
                <li>
                    <a class="recipe-link" href="/recipe/<%= recipe.id %>"><%= recipe.title %></a>
                    <a class="edit-link" href="/editRecipe/<%= recipe.id %>">Edit</a>
                </li>
            <% }); %>
        </ul>
        <a href="/">Back to Home</a>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
